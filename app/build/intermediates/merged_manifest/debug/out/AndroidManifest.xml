<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jakting.rn6pan"
    android:versionCode="202011060"
    android:versionName="0.1.0" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.jakting.rn6pan.utils.MyApplication"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.jakting.rn6pan.user.UserActivity"
            android:parentActivityName="com.jakting.rn6pan.MainActivity" />
        <activity
            android:name="com.jakting.rn6pan.user.LoginActivity"
            android:parentActivityName="com.jakting.rn6pan.MainActivity" />
        <activity
            android:name="com.jakting.rn6pan.user.FileListActivity"
            android:parentActivityName="com.jakting.rn6pan.MainActivity" />
        <activity
            android:name="com.jakting.rn6pan.AboutActivity"
            android:theme="@style/AppTheme.About" />
        <activity android:name="com.jakting.rn6pan.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 适配全面屏 -->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.4" /> <!-- 适配华为(hua wei)刘海屏 -->
        <meta-data
            android:name="android.notch_support"
            android:value="true" /> <!-- 适配小米(xiao mi)刘海屏 -->
        <meta-data
            android:name="notch.config"
            android:value="portrait|landscape" />

        <activity
            android:name="com.maning.imagebrowserlibrary.MNImageBrowserActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTop"
            android:screenOrientation="sensor"
            android:theme="@style/ImageBrowserTheme" />
    </application>

</manifest>